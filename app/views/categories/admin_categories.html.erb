<div class="jumbotron">
  <table class="table-hover">
    <caption>Artículos</caption>
    <thead class="table-active">
      <tr>
        <th>Titulo</th>
        <th>Descripción</th>
        <th>Autor</th>
        <th>Fecha de creación</th>
      </tr>
    </thead>
    <tbody>
      <%@categories.each do |category| %>
        <tr>
          <td><%= category.name%></td>
          <td><%= truncate(category.description, length: 200 )%></td>
          <td><%= category.user.email %></td>
          <td><%= category.created_at.strftime("%D")%></td>
          <td><%= link_to "Editar categoría", edit_category_path(category), class:"btn btn-warning"%></td>
          <td><%= link_to "Mostrar categoría", category, class:"btn btn-info" %></td>
          <td><%= link_to "Eliminar categoría", category, method: :delete, data:{confirm: "Deseas eliminar artículo"}, class:"btn btn-danger" %></td> <br>
        </tr>
      <%end%>
    </tbody>
  </table>
</div>