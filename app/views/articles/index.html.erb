<h1>Artículos</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <div class="row"> 
      <% @articles.each do |article| %>
        <div class="container jumbotron col-md-5 ">
          <div class="row">
            <h1 class="display-8"><%= link_to article.title, article %></h1>
          </div>
          <div class="row">
            <%= article.body %>
          </div>
          <h3 class="row">categorias:</h3>
            <%article.categories.each do |categories_articles|%>
              <div class="row">
                <div class="badge badge-primary">
                  <%= categories_articles.name %><br>
                </div>
              </div>
            <%end%>
        </div>
      <% end %>
    </div>
  </tbody>
</table>

<br>
<%if user_signed_in?%>
  <%= link_to 'Nuevo artículo', new_article_path %>
<%end%>