<div class="container-fluid jumbotron col-md-8 offset-md-2">
  <h1>Contactenos:</h1>
  <%= form_for @contact do |form| %>
    <div class="form-group row">
      <%= form.label :email, class:"offset-md-2 col-md-3 col-form-label" %>
      <%= form.text_field :email, class:"offset-md-2 form-control" %>
    </div>

    <div class="form-group row">
      <%= form.label :title, class:"offset-md-2 col-md-3 col-form-label" %>
      <%= form.text_field :title, class:"offset-md-2 form-control" %>
    </div>

    <div class="form-group row">
      <%= form.label :description, class:"offset-md-2 col-md-3 col-form-label" %>
      <%= form.text_area :description, class:"offset-md-2 form-control" %>
    </div>

    <div class="form-group row actions">
      <%= form.submit "Enviar", class:"btn btn-primary offset-md-2"%>
    </div>
  <% end %>
</div>